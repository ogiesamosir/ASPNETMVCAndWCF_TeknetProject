
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Vaksin Tracking", "Login", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <h3>List Products</h3>
    @using (Html.BeginForm("search", "product"))
    {
        <input type="text" name="keyword" /> <input type="submit" value="Search" />
        <br />
        <input type="radio" name="condition" value="byID" checked="checked" /><span>By ID</span>
        <input type="radio" name="condition" value="byDate" /><span>By Date</span>
    }
    <table border="1" cellpadding="2" cellspacing="2">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>CreationDate</th>
            <th>Action</th>
        </tr>
        @foreach (var product in ViewBag.listProducts)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.CreationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <button type="button">
                        @Html.ActionLink("Edit", "Update", new { name = product.Name })
                    </button> |
                    <button type="button">
                        @Html.ActionLink("Delete", "Delete", new { name = product.Name })
                    </button>
                </td>
            </tr>
        }
    </table>
    <br /><br />
    <button>@Html.ActionLink("Tambah", "Tambah")</button>

  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
</body>
</html>
